<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.twburnsgmail.opiecalc.MainActivity$PlaceholderFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/textView_dist_wc"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText_dist_wc"
        android:hint="enter distance"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_lat_wc"
        android:hint="enter latitude"
        android:textAlignment="center"
        android:layout_below="@+id/textView_lat_wc"
        android:layout_alignStart="@+id/editText_dist_wc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_dist_ec"
        android:hint="enter distance"
        android:textAlignment="center"
        android:layout_below="@+id/textView_dist_ec"
        android:layout_alignStart="@+id/editText_lat_wc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_lat_ec"
        android:hint="enter latitude"
        android:textAlignment="center"
        android:layout_below="@+id/textView_lat_ec"
        android:layout_alignStart="@+id/editText_dist_ec" />

    <TextView
        android:text="Distance to East Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_dist_ec"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText_lat_wc"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Distance to West Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_dist_wc"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/b_set_at_lat"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Latitude of West Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_lat_wc"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/editText_dist_wc"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Latitude of East Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_lat_ec"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/editText_dist_ec"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Stake Latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b_set_at_lat"
        android:onClick="calcSetAt"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView_set_at_result"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_set_at_result"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
